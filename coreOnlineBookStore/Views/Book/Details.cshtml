@model coreOnlineBookStore.Models.Book

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<br />
<br />
<h2>Details</h2>
<br />

<div class="card mb-3" style="max-width: 540px;">
    <div class="row no-gutters">
        @*<div class="col-md-4">
                <img src="~/images/img.png" class="card-img" alt="...">
            </div>*@
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title"><b>Name : </b>@Html.DisplayFor(model => model.BookName)</h5>
                <h5 class="card-text"><b>Price : </b>@Html.DisplayFor(model => model.BookPrice)</h5>
                <h5 class="card-text"><b>Type : </b>@Html.DisplayFor(model => model.BookType)</h5>
                <h5 class="card-text"><b>Author : </b>@Html.DisplayFor(model => model.Author.AuthorName)</h5>
                <h5 class="card-text"><b>Category : </b>@Html.DisplayFor(model => model.BookCategory.CategoryName)</h5>

            </div>
        </div>
    </div>
</div>

<a asp-controller="Book" asp-action="Index" class="btn btn-primary">Back To List</a>