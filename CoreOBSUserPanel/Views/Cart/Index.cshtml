@model IEnumerable<CoreOBSUserPanel.Models.Item>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h3>Cart Page</h3>
<table class="table table-hover">
    <tr>
        <th>Options</th>
        <th>Id</th>
        <th>Name</th>
        <th>Photo</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Sub Total</th>
    </tr>
    @foreach (var item in ViewBag.cart)
    {
        <tr>
            <td><a asp-controller="cart" asp-action="remove" asp-route-id="@item.BookDetails.BookId">Remove</a></td>
            <td>@item.BookDetails.BookId</td>
            <td>@item.BookDetails.BookName</td>
            <td><img src="@item.BookDetails.BookImage" width="60" /></td>
            <td>@item.BookDetails.BookPrice</td>
            <td>@item.Quantity</td>
            <td>@(item.BookDetails.BookPrice * item.Quantity)</td>
        </tr>

    }
    <tr>
        <td allign="right" colspan="6">Sum</td>
        <td>
            @ViewBag.total
        </td>
    </tr>
</table>
<br />
<a asp-controller="Home" asp-action="index">Continue Shopping</a>
<a asp-controller="Cart" asp-action="Checkout">Checkout</a>

